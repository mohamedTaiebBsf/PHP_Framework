{% extends '@admin/layout.twig' %}

{% block title "Administration" %}

{% block body %}
    <p class="text-left">
        <a href="{{ path(rootPrefix ~ '.create') }}" class="btn btn-primary">Ajouter un article</a>
    </p>
    <table class="table table-striped">
        <thead>
        <tr>
            <td>Titre</td>
            <td>Catgorie</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>
        {% set token_input = csrf_input() %}
        {% for item in items %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.category_name }}</td>
                <td>
                    <a href="{{ path(rootPrefix ~ '.edit', {id: item.id}) }}" class="btn btn-primary btn-sm">Editer</a>
                    <form
                            action="{{ path(rootPrefix ~ '.delete', {id: item.id}) }}"
                            method="POST"
                            onsubmit="return confirm('Etes vous sÃ»r?')"
                            style="display: inline;"
                    >
                        <input type="hidden" name="_method" value="DELETE">
                        {{ token_input | raw }}
                        <button class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ paginate(items, rootPrefix ~ '.index') }}
{% endblock %}